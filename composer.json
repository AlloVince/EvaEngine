      "name": "AlloVince",
      "email": "allo.vince@gmail.com",
      "homepage": "http://avnpc.com"
    }
  ],
  "require": {
    "php": ">=5.3.10",
    "ext-phalcon": ">=1.3.2",
    "phalcon/incubator": "~1.3",
    "swiftmailer/swiftmailer": "v5.3.0",
    "knplabs/gaufrette": "v0.1.8",
    "evaengine/eva-sms": "0.1.*",
    "symfony/console": "^2.6",
    "phpdocumentor/reflection-docblock": "^2.0",
    "doctrine/annotations": "^1.2"
  },
  "require-dev": {
    "satooshi/php-coveralls": "dev-master",
    "mockery/mockery": "^0.9.4"
  },
  "suggest": {
    "ext-redis": "*",
    "ext-gearman": "*"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/EvaEngine/incubator.git"
    }
  ],
  "autoload": {
    "psr-4": {"Eva\\EvaEngine\\": "src/EvaEngine"},
    "files": ["src/EvaEngine/helpers.php"]
  }
}
